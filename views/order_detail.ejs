<% include include/header %>
<div id="left-div" class="col-lg-12">
    <center>
        <h3><img src="images/houzio-logo.png" width="400px" /></h3>
    </center>
</div>
<div id="centeredDiv">
    <h1>order # <%= order.id %> </h1><br>
    order date: <%= order.order_date%> <br>
    Amount paid: $49.99<br><br>
</div>
<div id="centeredDiv">
    <h3>details:</h3>
    <table class="table" id="summary-table">
        <tr>
            <td><b>Address : </b></td>
            <td><%= user.address + user.state + user.zip %><br></td>
        </tr>
        <tr>
            <td><b>person 1: </b></td>
            <td><%= user.first + user.last + ',' + user.birth %><br></td>
        </tr>
        <tr>
            <td><b>person 2: </b></td>
            <td> Mary Smith, 02/10/1967<br></td>
        </tr>
        <tr>
            <td><b>age of home : </b></td>
            <td><%= user.home_age %><br></td>
        </tr>
        <tr>
            <td><b>age of roof: </b></td>
            <td><%= user.roofless %><br></td>
        </tr>
        <tr>
            <td><b>roof : </b></td>
            <td><%= user.rooftype %><br></td>
        </tr>
        <tr>
            <td><b>alarm system: </b></td>
            <td><%= user.alarm_system %><br></td>
        </tr>
        <tr>
            <td><b>dog breed: </b></td>
            <td><%= user.dog %><br></td>
        </tr>
        <tr>
            <td><b>flood zone: </b></td>
            <td><%= user.flood %><br></td>
        </tr>
        <tr>
            <td><b>bundle: </b></td>
            <td><%= user.bundlehome %><br></td>
        </tr>
        <tr>
            <td><b>settlement date: </b></td>
            <td><%= user.settlementdate %><br></td>
        </tr>
        <tr>
            <td><b>credit score: </b></td>
            <td><%= user.basement %><br></td>
        </tr>
    </table>
</div>
<div id="centeredDiv">
    <h3>e-sign status:<br>
        <font color="red">
    </h3>
    </font>
    <table class="table">
        <tr>
            <td>
                <font color="green"><span class="glyphicon glyphicon-ok-circle"></span></font>
            </td>
            <td>request sent to seller </td>
            <td><i>
                    <font color="green"><%= order.to_seller %></font>
                </i></td>
        </tr>
        <tr>
            <td></td>
            <td>seller approved request</td>
            <td><i><%= order.approve %></i></td>
        </tr>
        <tr>
            <td></td>
            <td>report sent to <i>user's email</i> </td>
            <td><i><%= order.sent_user %></i></td>
        </tr>

    </table>
</div>
<div id="centeredDiv">
    <h3>claim history:<br>
        <font color="red">
    </h3>
    </font>
    <table class="table">
        <% for(var i=0; i<claims.length; i++) { %>
        <tr>
            <td><%= claims[i].loss_date %></td>
            <td><i>
                    <font color="red"><%= claims[i].loss_cause %></font>
                </i></td>
            <td><%= claims[i].loss_amount %></td>
        </tr>
        <% } %>
    </table>
</div>
</div>
</div>
<% include include/footer %>